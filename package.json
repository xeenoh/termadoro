{
	"name": "termadoro",
	"version": "1.0.2",
	"description": "A TUI Pomdoro Timer with tagging and reporting support",
	"author": "Zeyad Hesham",
	"license": "MIT",
	"bin": {
		"terma": "dist/app.js"
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "vitest",
		"test:watch": "vitest --watch"
	},
	"files": [
		"dist",
		"assets",
		"readme.md"
	],
	"dependencies": {
		"better-sqlite3": "^12.2.0",
		"figlet": "^1.8.1",
		"ink": "^4.1.0",
		"ink-big-text": "^2.0.0",
		"ink-gradient": "^3.0.0",
		"meow": "^11.0.0",
		"node-notifier": "^10.0.1",
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/better-sqlite3": "^7.6.13",
		"@types/figlet": "^1.7.0",
		"@types/node": "^24.0.3",
		"@types/node-notifier": "^8.0.5",
		"@types/react": "^18.0.32",
		"@types/sound-play": "^1.1.3",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4",
		"xo": "^1.1.0"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/xeenoh/termadoro"
	},
	"prettier": "@vdemedes/prettier-config",
	"keywords": [
		"cli",
		"pomodoro",
		"productivity",
		"tui",
		"ink",
		"nodejs"
	]
}
